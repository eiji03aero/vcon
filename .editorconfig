# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[*.{md,yml}]
trim_trailing_whitespace = false
max_line_length = false
